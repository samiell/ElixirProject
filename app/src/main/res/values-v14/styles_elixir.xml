<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="Theme.Elixir" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_elixir</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Elixir</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Elixir</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Elixir</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Elixir</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Elixir</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_elixir</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_elixir</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Elixir</item>
        
        
    </style>

    <style name="ActionBar.Solid.Elixir" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_elixir</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_elixir</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_elixir</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Elixir</item>
    </style>

    <style name="ActionBar.Transparent.Elixir" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_elixir</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Elixir</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Elixir.Widget" parent="@style/Theme.AppCompat">
        <item name="android:popupMenuStyle">@style/PopupMenu.Elixir</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Elixir</item>
    </style>

</resources>